@model IEnumerable<SmartPlant.Models.ViewModels.UserPlantViewModel>

@{
    ViewData["Title"] = "My Plants";
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Main Content Area -->
        <div class="col-md-9">
            <h2 class="text-center mb-4">My Plants</h2>

            <!-- Plants Table Container -->
            <div class="p-4" style="background-color: #d4e4d4; border: 1px solid #999;">
                <!-- Add New Plant Button in upper right corner -->
                <div class="row mb-3">
                    <div class="col-12 text-end">
                        <a asp-action="SelectPlant" class="btn btn-outline-dark px-4" style="border: 2px solid #333; border-radius: 5px;">+ Add New Plant</a>
                    </div>
                </div>

                @if (Model != null && Model.Any())
                {
                    <table class="table table-bordered bg-white">
                        <thead>
                            <tr>
                                <th>Plant Name</th>
                                <th>Last Watered</th>
                                <th>Status Icon</th>
                                <th>Next Watering</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var userPlant in Model)
                            {
                                <tr style="background-color: #c8e6c9;">
                                    <td>@userPlant.PlantName</td>
                                    <td>
                                        @if (userPlant.LastWatered.HasValue)
                                        {
                                            var daysAgo = (DateTime.Now - userPlant.LastWatered.Value).Days;
                                            if (daysAgo == 0)
                                            {
                                                <text>Today</text>
                                            }
                                            else if (daysAgo == 1)
                                            {
                                                <text>Yesterday</text>
                                            }
                                            else
                                            {
                                                @($"{daysAgo} days ago")
                                            }
                                        }
                                        else
                                        {
                                            <text>Never</text>
                                        }
                                    </td>
                                    <td>
                                        @if (userPlant.NextWatering.HasValue)
                                        {
                                            var daysUntilWater = (userPlant.NextWatering.Value.Date - DateTime.Now.Date).Days;
                                            if (daysUntilWater <= 0)
                                            {
                                                <span style="color: #d32f2f;">âš  (Time to water!)</span>
                                            }
                                            else if (daysUntilWater <= 2)
                                            {
                                                <span style="color: #ff9800;">â˜¼ (Needs sunlight)</span>
                                            }
                                            else
                                            {
                                                <span style="color: #4caf50;">âœ“ Healthy</span>
                                            }
                                        }
                                        else
                                        {
                                            <span style="color: #4caf50;">âœ“ Healthy</span>
                                        }
                                    </td>
                                    <td>
                                        @if (userPlant.NextWatering.HasValue)
                                        {
                                            var daysUntilWater = (userPlant.NextWatering.Value.Date - DateTime.Now.Date).Days;
                                            if (daysUntilWater <= 0)
                                            {
                                                <text>Tomorrow</text>
                                            }
                                            else if (daysUntilWater == 1)
                                            {
                                                <text>Tomorrow</text>
                                            }
                                            else
                                            {
                                                @($"{daysUntilWater} days later")
                                            }
                                        }
                                        else
                                        {
                                            <text>-</text>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@userPlant.Id" class="btn btn-sm" style="background-color: #8b9f7f; color: white;">View</a>
                                        <form asp-action="Delete" asp-route-id="@userPlant.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this plant?')">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-center py-5">
                        <p class="mb-3">You don't have any plants yet.</p>
                        <a asp-action="Create" class="btn btn-secondary">Add Your First Plant</a>
                    </div>
                }
            </div>
        </div>

        <!-- Reminders Sidebar -->
        <div class="col-md-3">
            <div style="height: 60px;"></div>
            <h4 class="text-center mb-3">ðŸ”” Reminders</h4>
            <a asp-controller="Reminders" asp-action="Index" class="text-decoration-none">
                <div class="p-3" style="background-color: #f5f5f5; border: 1px solid #999; cursor: pointer; transition: background-color 0.2s;" onmouseover="this.style.backgroundColor='#e8e8e8'" onmouseout="this.style.backgroundColor='#f5f5f5'">
                    @{
                        var pendingReminders = ViewBag.PendingReminders as IEnumerable<SmartPlant.Models.Entities.Reminder>;
                    }
                    @if (pendingReminders != null && pendingReminders.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var reminder in pendingReminders)
                            {
                                <li class="mb-2" style="color: #1976d2;">ðŸ’§ @reminder.Task @reminder.Plant?.Name
                                    @if (reminder.ReminderDate.HasValue)
                                    {
                                        var daysUntil = (reminder.ReminderDate.Value.Date - DateTime.Now.Date).Days;
                                        if (daysUntil == 0)
                                        {
                                            <text>today</text>
                                        }
                                        else if (daysUntil == 1)
                                        {
                                            <text>tomorrow</text>
                                        }
                                    }
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No urgent reminders</p>
                    }
                </div>
            </a>
        </div>
    </div>

    <!-- Extra spacing for footer -->
    <div style="height: 150px;"></div>
</div>