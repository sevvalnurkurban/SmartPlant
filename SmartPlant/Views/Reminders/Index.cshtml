@model IEnumerable<SmartPlant.Models.Entities.Reminder>

@{
    ViewData["Title"] = "My Reminders";
}

<div class="container mt-4">
    <!-- Back to Dashboard Link -->
    <div class="mb-3">
        <a asp-controller="UserPlants" asp-action="Index" class="text-decoration-none text-dark">
            <span style="font-size: 1.2rem;">&larr; Back to Dashboard</span>
        </a>
    </div>

    <!-- Page Title -->
    <h2 class="text-center mb-2">My Reminders</h2>
    <p class="text-center mb-4">Update the information below and save your changes.</p>

    <!-- Main Content Container -->
    <div class="p-4" style="background-color: #d4e4d4; border: 1px solid #999;">

        <!-- Search and Filter Row -->
        <div class="row mb-4">
            <div class="col-md-6">
                <form asp-action="Index" method="get" class="d-flex">
                    <div class="input-group" style="max-width: 400px;">
                        <span class="input-group-text" style="background-color: white; border-right: none;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                            </svg>
                        </span>
                        <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Search Reminders" style="background-color: white; border-left: none;" />
                    </div>
                    <input type="hidden" name="filterStatus" value="@ViewBag.FilterStatus" />
                </form>
            </div>
            <div class="col-md-6 text-end">
                <form asp-action="Index" method="get" class="d-inline-block">
                    <select name="filterStatus" class="form-select d-inline-block" style="background-color: white; width: auto; min-width: 200px;" onchange="this.form.submit()">
                        <option value="">Filter By Status</option>
                        @if (ViewBag.FilterStatus == "All")
                        {
                            <option value="All" selected>All</option>
                        }
                        else
                        {
                            <option value="All">All</option>
                        }
                        @if (ViewBag.FilterStatus == "Pending")
                        {
                            <option value="Pending" selected>Pending</option>
                        }
                        else
                        {
                            <option value="Pending">Pending</option>
                        }
                        @if (ViewBag.FilterStatus == "Done")
                        {
                            <option value="Done" selected>Done</option>
                        }
                        else
                        {
                            <option value="Done">Done</option>
                        }
                    </select>
                    <input type="hidden" name="search" value="@ViewBag.Search" />
                </form>
            </div>
        </div>

        <!-- Reminders Table -->
        <div class="table-responsive">
            <table class="table table-bordered" style="background-color: white; border: 2px solid #333;">
                <thead>
                    <tr style="background-color: #e8e0d5; border: 2px solid #333;">
                        <th style="border: 1px solid #333; font-weight: bold;">Plant</th>
                        <th style="border: 1px solid #333; font-weight: bold;">Task</th>
                        <th style="border: 1px solid #333; font-weight: bold;">Date</th>
                        <th style="border: 1px solid #333; font-weight: bold;">Status</th>
                        <th style="border: 1px solid #333; font-weight: bold;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var reminder in Model)
                        {
                            <tr style="@(reminder.Status == "Done" ? "background-color: #c8e6c9;" : "")">
                                <td style="border: 1px solid #333;">@reminder.Plant?.Name</td>
                                <td style="border: 1px solid #333;">@reminder.Task</td>
                                <td style="border: 1px solid #333;">@reminder.ReminderDate?.ToString("MMM d")</td>
                                <td style="border: 1px solid #333;">
                                    @if (reminder.Status == "Pending")
                                    {
                                        <span style="color: #d32f2f;">&#x25CF;</span> <span>Pending</span>
                                    }
                                    else
                                    {
                                        <span style="color: #4caf50;">&#x2714;</span> <span>Done</span>
                                    }
                                </td>
                                <td style="border: 1px solid #333;">
                                    @if (reminder.Status == "Pending")
                                    {
                                        <form asp-action="MarkAsDone" asp-route-id="@reminder.Id" method="post" style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm" style="background-color: #8b9f7f; color: white; border-radius: 5px; padding: 5px 20px;">Done</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="MarkAsPending" asp-route-id="@reminder.Id" method="post" style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm" style="background-color: #999; color: white; border-radius: 5px; padding: 5px 20px;">Undo</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center" style="border: 1px solid #333; padding: 30px;">
                                No reminders found. Click "Add Reminder" to create a new one.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Add Reminder Button -->
        <div class="text-center mt-4">
            <a asp-action="Create" class="btn" style="background-color: #8b9f7f; color: white; border-radius: 5px; padding: 8px 30px;">Add Reminder</a>
        </div>

    </div>

    <!-- Extra spacing for footer -->
    <div style="height: 150px;"></div>
</div>