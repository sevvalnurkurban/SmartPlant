<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartPlant Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartPlant.styles.css" asp-append-version="true" />
</head>
<body style="background-color: #e8e0d5;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #c9b8a0;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Admin" asp-action="Dashboard">SmartPlant</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Admin" asp-action="ManagePlants">Manage Plants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Admin" asp-action="ManageUsers">Manage Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Admin" asp-action="ViewFeedback">View Feedback</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Admin" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-link nav-link text-dark border-0">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted pt-4">
        <div class="container py-3">
            <div class="row mb-2">
                <div class="col-md-4 text-start">
                    <a asp-controller="Home" asp-action="About" class="text-decoration-none text-dark">About:</a>
                </div>
                <div class="col-md-4 text-center">
                    Contact: <a href="mailto:smartplant.support@example.com" class="text-decoration-none text-dark">smartplant.support@example.com</a>
                </div>
                <div class="col-md-4 text-end">
                    <a asp-controller="Home" asp-action="Help" class="text-decoration-none text-dark">Help:</a>
                </div>
            </div>
            <div class="row" style="padding-top: 60px !important;">
                <div class="col-12 text-center">
                    <small class="text-muted">
                        Şevval Nur Kurban, Simge Eylül Özer | Soft3111 | Fall 2025
                    </small>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
