@model IEnumerable<SmartPlant.Models.Entities.Plant>

@{
    ViewData["Title"] = "Manage Plants";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <!-- Page Title -->
    <h2 class="text-center mb-4">Manage Plants</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Main Content Container -->
    <div class="p-4" style="background-color: #d4e4d4; border: 1px solid #999;">

        <!-- Search and Add Button Row -->
        <div class="row mb-3">
            <div class="col-md-6">
                <input type="text" id="searchBox" class="form-control" placeholder="Search by plant name..." style="background-color: white; border: 1px solid #999;" />
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="CreatePlant" class="btn" style="background-color: white; color: #333; border: 1px solid #999; border-radius: 5px; padding: 8px 20px;">+ Add New Plant</a>
            </div>
        </div>

        <!-- Plants Table -->
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive" style="max-height: 600px; overflow-x: auto; overflow-y: auto;">
                <table class="table table-bordered" id="plantsTable" style="background-color: white; min-width: 1000px;">
                    <thead style="position: sticky; top: 0; z-index: 10;">
                        <tr style="background-color: #f0f0f0;">
                            <th style="border: 1px solid #999; min-width: 150px;">Plant Name</th>
                            <th style="border: 1px solid #999; min-width: 150px;">Watering Period</th>
                            <th style="border: 1px solid #999; min-width: 130px;">Water (ml/week)</th>
                            <th style="border: 1px solid #999; min-width: 180px;">Light</th>
                            <th style="border: 1px solid #999; min-width: 120px;">Temperature</th>
                            <th style="border: 1px solid #999; text-align: center; min-width: 200px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            bool isEvenRow = false;
                        }
                        @foreach (var plant in Model)
                        {
                            var rowColor = isEvenRow ? "#c8e6c9" : "white";
                            isEvenRow = !isEvenRow;

                            <tr style="background-color: @rowColor;">
                                <td style="border: 1px solid #999;">@plant.Name</td>
                                <td style="border: 1px solid #999;">@plant.WaterPeriod</td>
                                <td style="border: 1px solid #999;">@(plant.WaterMlPerWeek?.ToString() ?? "-") ml</td>
                                <td style="border: 1px solid #999;">@plant.Light</td>
                                <td style="border: 1px solid #999;">@plant.Temperature</td>
                                <td style="border: 1px solid #999; text-align: center;">
                                    <a asp-action="EditPlant" asp-route-id="@plant.Id" class="btn btn-sm" style="background-color: #4caf50; color: white; border-radius: 5px; padding: 5px 15px; margin-right: 5px;">Edit</a>
                                    <form asp-action="DeletePlant" asp-route-id="@plant.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this plant?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm" style="background-color: #f44336; color: white; border-radius: 5px; padding: 5px 15px;">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <p class="text-muted mb-3">No plants found in the database.</p>
                <a asp-action="CreatePlant" class="btn" style="background-color: #8b9f7f; color: white; border-radius: 5px; padding: 8px 30px;">Add Your First Plant</a>
            </div>
        }
    </div>

    <!-- Extra spacing for footer -->
    <div style="height: 150px;"></div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchBox = document.getElementById('searchBox');
            const plantsTable = document.getElementById('plantsTable');

            if (searchBox && plantsTable) {
                searchBox.addEventListener('keyup', function() {
                    const searchTerm = this.value.toLowerCase();
                    const tableRows = plantsTable.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

                    for (let i = 0; i < tableRows.length; i++) {
                        const plantNameCell = tableRows[i].getElementsByTagName('td')[0];
                        if (plantNameCell) {
                            const plantName = plantNameCell.textContent || plantNameCell.innerText;
                            if (plantName.toLowerCase().indexOf(searchTerm) > -1) {
                                tableRows[i].style.display = '';
                            } else {
                                tableRows[i].style.display = 'none';
                            }
                        }
                    }
                });
            }
        });
    </script>
}
