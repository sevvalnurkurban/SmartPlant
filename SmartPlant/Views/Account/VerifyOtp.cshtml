@model SmartPlant.Models.ViewModels.VerifyOtpViewModel

@{
    ViewData["Title"] = "Verify Email";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm" style="border: 1px solid #999; border-radius: 10px;">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h1 style="color: #8b9f7f;">ðŸŒ± SmartPlant</h1>
                        <h4 class="mt-3">Email Verification</h4>
                        <p class="text-muted">We've sent a 6-digit verification code to your email</p>
                    </div>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="VerifyOtp" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Email (readonly) -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label" style="font-weight: bold;">Email:</label>
                            <input asp-for="Email" type="email" class="form-control" style="background-color: #f5f5f5; border: 1px solid #999;" readonly />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- OTP Code -->
                        <div class="mb-4">
                            <label asp-for="OtpCode" class="form-label" style="font-weight: bold;">Verification Code:</label>
                            <input asp-for="OtpCode" type="text" class="form-control text-center" maxlength="6" placeholder="" style="background-color: white; border: 1px solid #999; font-size: 24px; letter-spacing: 8px; font-weight: bold;" autofocus />
                            <span asp-validation-for="OtpCode" class="text-danger small"></span>
                            <small class="text-muted">Enter the 6-digit code sent to your email</small>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-lg" style="background-color: #8b9f7f; color: white; border-radius: 5px;">Verify Email</button>
                        </div>
                    </form>

                    <!-- Resend Code Link -->
                    <div class="text-center mt-3">
                        <p class="text-muted small">Didn't receive the code?</p>
                        <a asp-action="ResendOtp" asp-route-email="@Model.Email" class="text-decoration-none" style="color: #8b9f7f; font-weight: bold;">Resend Code</a>
                    </div>

                    <!-- Back to Login -->
                    <div class="text-center mt-4">
                        <a asp-action="Login" class="text-muted small">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Extra spacing to push footer below white card -->
    <div style="height: 400px;"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Auto-format OTP input - only allow numbers
        document.addEventListener('DOMContentLoaded', function() {
            const otpInput = document.querySelector('input[name="OtpCode"]');
            if (otpInput) {
                otpInput.addEventListener('input', function(e) {
                    // Remove non-numeric characters
                    this.value = this.value.replace(/[^0-9]/g, '');

                    // Limit to 6 digits
                    if (this.value.length > 6) {
                        this.value = this.value.slice(0, 6);
                    }
                });

                // Prevent non-numeric input
                otpInput.addEventListener('keypress', function(e) {
                    if (e.key && !/[0-9]/.test(e.key)) {
                        e.preventDefault();
                    }
                });
            }
        });
    </script>
}