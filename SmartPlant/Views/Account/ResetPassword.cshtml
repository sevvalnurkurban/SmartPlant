@{
    ViewData["Title"] = "Reset Password";
}

<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <!-- Logo and Title -->
            <div class="text-center mb-4">
                <h1 class="mb-3" style="color: #8b9f7f;">üå± SmartPlant</h1>
                <h2>Set New Password</h2>
            </div>

            <!-- Reset Password Form Box -->
            <div class="p-4" style="background-color: #f0f7f0; border: 1px solid #8b9f7f; border-radius: 10px;">
                <form asp-action="ResetPassword" method="post">
                    <input type="hidden" name="token" value="@ViewBag.Token" />

                    @if (!string.IsNullOrEmpty(ViewData.ModelState.Values.FirstOrDefault()?.Errors.FirstOrDefault()?.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }

                    <div class="mb-3">
                        <label for="password" class="form-label">New Password:</label>
                        <input type="password" id="password" name="password" class="form-control" required minlength="6" />
                        <small class="text-muted">Password must be at least 6 characters</small>
                    </div>

                    <div class="mb-4">
                        <label for="confirmPassword" class="form-label">Confirm New Password:</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required minlength="6" />
                    </div>

                    <div class="text-center mb-3">
                        <button type="submit" class="btn px-5" style="background-color: #8b9f7f; color: white;">Reset Password</button>
                    </div>

                    <div class="text-center">
                        <a asp-action="Login" class="text-decoration-none" style="color: #8b9f7f;">
                            ‚Üê Back to Login
                        </a>
                    </div>
                </form>
            </div>

            <div class="alert alert-info mt-4" style="background-color: #fff4e5; border-color: #ff9800;">
                <strong>‚ö†Ô∏è Password Requirements:</strong>
                <ul class="mb-0 mt-2">
                    <li>Minimum 6 characters</li>
                    <li>Both passwords must match</li>
                    <li>Link expires in 24 hours</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Extra spacing for footer -->
    <div style="height: 150px;"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}