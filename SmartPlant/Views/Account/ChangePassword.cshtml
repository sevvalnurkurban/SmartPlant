@model SmartPlant.Models.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = User.IsInRole("Admin") ? "~/Views/Shared/_AdminLayout.cshtml" : "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <!-- Back to Profile Link -->
    <div class="mb-3">
        <a asp-action="Profile" class="text-decoration-none text-dark">
            <span style="font-size: 1.2rem;">&larr; Back to Profile</span>
        </a>
    </div>

    <!-- Page Title -->
    <h2 class="text-center mb-2">Change Password</h2>
    <p class="text-center mb-4">Update your account password.</p>

    <!-- Change Password Container -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="p-4" style="background-color: #d4e4d4; border: 1px solid #999;">

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-action="ChangePassword" method="post">
                    @Html.AntiForgeryToken()

                    <!-- Current Password -->
                    <div class="mb-3">
                        <label asp-for="CurrentPassword" class="form-label" style="font-weight: bold;">Current Password:</label>
                        <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Enter current password" style="background-color: white; border: 1px solid #999;" />
                        <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                    </div>

                    <!-- New Password -->
                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label" style="font-weight: bold;">New Password:</label>
                        <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter new password" style="background-color: white; border: 1px solid #999;" />
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        <small class="text-muted">Minimum 6 characters</small>
                    </div>

                    <!-- Confirm New Password -->
                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label" style="font-weight: bold;">Confirm New Password:</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm new password" style="background-color: white; border: 1px solid #999;" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <!-- Change Password Button -->
                    <div class="text-center">
                        <button type="submit" class="btn" style="background-color: #8b9f7f; color: white; border-radius: 5px; padding: 8px 40px;">Change Password</button>
                    </div>

                    @if (ViewData.ModelState.Count > 0 && !ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-3">
                            @Html.ValidationSummary(false)
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>

    <!-- Extra spacing for footer -->
    <div style="height: 150px;"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}